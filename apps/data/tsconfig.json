{
  "extends": "@gravis-os/tsconfig/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@app/*": [
        "./src/*"
      ],
      "@public/*": [
        "./public/*"
      ],
      "@pages/*": [
        "./pages/*"
      ],
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".eslintrc.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
