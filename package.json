{
  "name": "main",
  "version": "0.0.1",
  "private": true,
  "sideEffects": false,
  "workspaces": [
    "apps/*",
    "packages/*",
    ".yalc/*",
    ".yalc/@*/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "start": "turbo run start --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "changeset": "changeset",
    "commit": "git-cz",
    "local": "yalc link --pure @gravis-os/types @gravis-os/ui @gravis-os/utils @gravis-os/config @gravis-os/theme @gravis-os/landing @gravis-os/analytics @gravis-os/query @gravis-os/form @gravis-os/fields && yarn install",
    "local:unlink": "yalc remove --all && yarn install",
    "watch": "turbo run watch",
    "turbo": "turbo",
    "test": "turbo run test",
    "analyze": "turbo run analyze --parallel",
    "gravis:up": "yarn upgrade -W --latest --scope @gravis-os && npm run gravis:dedupe",
    "gravis:dedupe": "npx yarn-deduplicate --strategy highest --scopes @gravis-os"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/prompt"
    }
  },
  "dependencies": {
    "@gravis-os/analytics": "^0.4.0",
    "@gravis-os/config": "^0.2.0",
    "@gravis-os/form": "^1.7.1",
    "@gravis-os/landing": "^1.1.0",
    "@gravis-os/query": "^0.2.0",
    "@gravis-os/theme": "^0.2.0",
    "@gravis-os/types": "^0.6.0",
    "@gravis-os/ui": "^0.11.2",
    "@gravis-os/utils": "^0.5.1"
  },
  "devDependencies": {
    "@changesets/cli": "^2.22.0",
    "@changesets/get-github-info": "^0.5.0",
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@commitlint/prompt": "^17.0.0",
    "@gravis-os/cli": "^0.1.0",
    "@gravis-os/eslint-config": "^0.1.3",
    "@gravis-os/tsconfig": "^0.0.9",
    "commitizen": "^4.2.4",
    "dotenv": "^16.0.1",
    "husky": "^8.0.0",
    "prettier": "latest",
    "turbo": "^1.10.14",
    "yalc": "^1.0.0-pre.53"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  },
  "packageManager": "yarn@1.22.1",
  "resolutions": {
    "@typescript-eslint/parser": "^6.2.0"
  }
}
